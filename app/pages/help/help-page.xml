<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page" xmlns:accordion="nativescript-accordion">
    <Page.actionBar>
        <ActionBar title="Help" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

     <accordion:Accordion items="{{items}}" headerTextBold="true" headerColor="pink"  headerTextColor="blue" allowMultiple="true"  selectedIndex="1">
            
            <accordion:Accordion.headerTemplate>
                <GridLayout columns="auto,*">
                    <Label color="black" text="{{title}}"/>
                    <Label col="1" text="+"/>
                </GridLayout>
            </accordion:Accordion.headerTemplate>

            <accordion:Accordion.itemTemplate>
                <StackLayout headerText="First">
                    <!-- <Image src="{{image}}"/> -->
                    <Label backgroundColor="green" text="{{text}}"/>
                </StackLayout>
            </accordion:Accordion.itemTemplate>


            <accordion:Accordion.footerTemplate>
                <GridLayout backgroundColor="yellow" columns="auto,*">
                    <Label text="{{footer}}"/>
                    <Label col="1" text="-"/>
                </GridLayout>
            </accordion:Accordion.footerTemplate>

    </accordion:Accordion>


    <!-- <StackLayout class="p-20">
        <Label text="Help page works" class="h1 text-center"/>
    </StackLayout> -->
</Page>
